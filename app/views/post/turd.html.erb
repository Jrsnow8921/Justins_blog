<div class="container" ng-app="Post">
  <h1>Recent Post</h1>

  <div ng-controller="PostController">
    <div class="well">
      <h3>Add a new post</h3>
      <form ng-submit="addPost()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="newPost.FIRST_NAME" class="form-control" placeholder="First Name" />
          </div>
          <div class="col-xs-6">
            <input type="text" ng-model="newPost.LAST_NAME" class="form-control" placeholder="Last Name" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <br />
            <input type="text" ng-model="newPost.post_text" class="form-control" placeholder="Post Text" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="Submit" value="Add Post" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>

    <h3>Current Post/h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Post Text</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="post in posts">
          <td>{{ post.FIRST_NAME }}</td>
          <td>{{ post.LAST_NAME }}</td>
          <td>{{ post.post_text }}</td>
          <td><a class="btn btn-danger" ng-click="deletePost($index)">Remove</a></td>
        </tr>
      </tbody>
    </table>

  </div>

